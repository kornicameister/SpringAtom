<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSourceInitializer"
          class="org.springframework.jdbc.datasource.init.DataSourceInitializer">
        <property name="dataSource" ref="dataSource"/>
        <property name="databasePopulator" ref="compositePopulator"/>
        <property name="enabled" value="${db.database.initialize}"/>
    </bean>

    <bean id="compositePopulator"
          class="org.springframework.jdbc.datasource.init.CompositeDatabasePopulator">
        <property name="populators">
            <array>
                <bean class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator">
                    <property name="scripts">
                        <array>
                            <value>classpath:org/agatom/springatom/server/repository/clear.sql</value>
                        </array>
                    </property>
                </bean>
                <bean class="org.agatom.springatom.server.populators.EnumDatabasePopulator">
                    <property name="enums">
                        <props>
                            <prop key="sauthority">
                                org.agatom.springatom.server.model.types.user.SSecurityAuthorityEnum
                            </prop>
                            <prop key="smetadata">org.agatom.springatom.server.model.types.meta.SMetaDataEnum</prop>
                        </props>
                    </property>
                </bean>
                <bean class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator">
                    <property name="scripts">
                        <array>
                            <value>classpath:org/agatom/springatom/server/repository/sadministrator.sql</value>
                        </array>
                    </property>
                </bean>
            </array>
        </property>
    </bean>

</beans>